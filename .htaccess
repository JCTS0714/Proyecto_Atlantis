# Atlantis CRM - Rewrite rules for friendly URLs
# Place this file in the project public root (public_html or document root)

# Prevent Apache MultiViews interfering with routing
Options -MultiViews

<IfModule mod_rewrite.c>
  RewriteEngine On

  # If your app is installed in a subdirectory, set RewriteBase accordingly,
  # for example: RewriteBase /mi_subcarpeta/
  RewriteBase /

  # Serve existing files/directories directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Redirect everything else to index.php with ruta param
  # Example: /inicio -> /index.php?ruta=inicio
  RewriteRule ^(.*)$ index.php?ruta=$1 [L,QSA]
</IfModule>

# Fallback message when mod_rewrite is not enabled
<IfModule !mod_rewrite.c>
  # mod_rewrite no está activo; las URLs amigables no funcionarán.
</IfModule>
