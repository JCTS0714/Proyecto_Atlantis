<IfModule mod_rewrite.c>
  RewriteEngine On

  # Sitio desplegado en la raíz pública: ajuste RewriteBase = /
  # Si su despliegue está en un subdirectorio, reemplace '/' por '/ruta/subcarpeta/'
  RewriteBase /

  # No reescribir archivos o carpetas existentes
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Redirigir todo lo demás al front controller index.php?ruta=...
  RewriteRule ^(.+)$ index.php?ruta=$1 [L,QSA]
</IfModule>

# Nota: Si tras subir esto obtiene 500 o el archivo no parece aplicarse,
# - Verifique que Apache tenga mod_rewrite habilitado.
# - Asegúrese de que el VirtualHost permita .htaccess con `AllowOverride All`.Options All -Indexes

<IfModule mod_rewrite.c>
    RewriteEngine On
    # Ajustar RewriteBase según ruta local. Si tu URL local es:
    # http://localhost/Proyecto_Atlantis/Ventas/  -> usa RewriteBase /Proyecto_Atlantis/Ventas/
    # Si accedes desde otra ruta local, reemplaza la línea por la correspondiente.
    RewriteBase /Proyecto_Atlantis/Ventas/
    
    # No reescribir si es un archivo real
    RewriteCond %{REQUEST_FILENAME} !-f
    # No reescribir si es una carpeta real
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Reescribir todas las rutas a index.php?ruta=
    RewriteRule ^(.+)$ index.php?ruta=$1 [QSA,L]
</IfModule>