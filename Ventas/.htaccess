<IfModule mod_rewrite.c>
  RewriteEngine On

  # --- Ajusta RewriteBase según despliegue ---
  # Si el sitio está desplegado en la raíz pública (ej. https://example.com/) usar:
  #   RewriteBase /
  # Si el sitio está en un subdirectorio (ej. XAMPP local):
  #   RewriteBase /Proyecto_Atlantis/Ventas/
  # Descomenta la línea que corresponda y deja la otra comentada.
  RewriteBase /

  # No reescribir archivos o carpetas existentes
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Redirigir todo lo demás al front controller `index.php?ruta=...`
  RewriteRule ^(.+)$ index.php?ruta=$1 [L,QSA]
</IfModule>

# Notas de despliegue:
# - Asegúrate de que Apache tenga `mod_rewrite` habilitado (LoadModule rewrite_module ...).
# - Si las reglas no se aplican, configura `AllowOverride All` para el directorio público en httpd.conf o el VirtualHost:
#     <Directory "C:/xampp/htdocs">
#         AllowOverride All
#     </Directory>
# - Reinicia Apache tras cualquier cambio.